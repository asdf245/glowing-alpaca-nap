{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "dist/main",
    "rootDir": "src/main",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["node", "electron"]
  },
  "include": ["src/main/**/*.ts"],
  "exclude": ["node_modules"]
}